
{{#if loggedIn}}
{{#if entries.length}}
<section style = "background-color: beige">
  <h2>Your Entries</h2>
  <ul class="entry-list">
    {{#each entries as |entry|}}
    <li>
      {{> journal-entry-info entry}}      
    </li>
    {{/each}}
  </ul>
</section>
{{else}}
<section>
  <h3>You haven't posted anything yet</h3>
</section>
{{/if}}

<button type="submit"><a href="/dashboard/new">Add New Entry</a></button>
{{/if}}
<button type="submit"><a href="/">Back to Home Page</a></button>