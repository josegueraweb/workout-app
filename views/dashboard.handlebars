{{#if entries.length}}
<section>
  <h2>Your Entries</h2>
  <ol class="entry-list">
    {{#each entries as |entry|}}
    <li>
      {{> dashboard-entry-info entry}}      
    </li>
    {{/each}}
  </ol>
</section>
{{else}}
<section>
  <h3>You haven't posted anything yet</h3>
</section>
{{/if}}

<button type="submit"><a href="/dashboard/new">Add New Entry</a></button>
